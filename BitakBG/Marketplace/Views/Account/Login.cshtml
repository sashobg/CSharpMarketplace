@using Marketplace.Models
@model LoginViewModel
@{
    ViewBag.Title = "Вход";
}
<div class="container">
    <div class="well">
        <h2>@ViewBag.Title</h2>
        <div class="row">
            <div class="col-sm-10">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-4">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                          @Html.LabelFor(m => m.RememberMe, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-4">
                                <div style="padding-top:15px"></div>
                                <div class="checkbox">
                                   
                                        <span class="icons"><span class="first-icon fa fa-square-o"></span><span class="second-icon fa fa-check-square-o"></span></span>
                                                 
                                        @Html.CheckBoxFor(m => m.RememberMe)     
                                                           
                           
                                   
                                   
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-4">
                                <input type="submit" value="Вход" class="btn btn-default" />

                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("Нямаш регистрация ?", "Register")
                        </p>
                        @* Enable this once you have account confirmation enabled for password reset functionality
                            <p>
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </p>*@
                    }
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}