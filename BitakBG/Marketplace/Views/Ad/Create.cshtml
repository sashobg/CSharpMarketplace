@model Marketplace.Models.AdViewModel
@{
    ViewBag.Title = "Добавяне на обява";
}

<div class="container">
    <div class="well">
        <h2>Добави обява</h2>
     
      
        @using (Html.BeginForm("Create", "Ad", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <input type="hidden" name="Id" id="Id" value="@Model.Id">
            <div class="form-group">
                @Html.LabelFor(m => m.Заглавие, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Заглавие, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Съдържание, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Съдържание, new { @class = "form-control", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Цена, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Цена, new { @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
               <label class="control-label col-sm-4">Основна снимка</label>
                <div class="col-sm-4">
                    <input type="file" name="primaryImage" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-4">Още снимки</label>
                <div class="col-sm-4">
                    <input type="file" name="uploadImages" multiple/>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Категория, new { @class = "col-sm-4 control-label" })
                <div class="dropdown col-sm-4">
                    @Html.DropDownListFor(m => m.Категория,
                        new SelectList(Model.Categories, "Id", "Name"),
                        new { @class = "btn btn-info col-sm-12" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Град, new { @class = "col-sm-4 control-label" })
                <div class="dropdown col-sm-4">
                    @Html.DropDownListFor(m => m.Град,
                        new SelectList(Model.Towns, "Id", "Name"),
                        new { @class = "btn btn-info col-sm-12" })
                </div>
            </div>

          
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Назад", "Index", "Ad", null, new { @class = "btn btn-default" })
                   <input type="submit" value="Добави" class="btn btn-success">
                </div>
            </div>

            
        }
       
      
               

      
    </div>
</div>
