@model Marketplace.Models.AdViewModel

@{
    ViewBag.Title = "Редактиране на обява";
}

<div class="container">
    <div class="well">
        <h2>Редактирай обява</h2>
        @using (Html.BeginForm("Edit", "Ad", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.AuthorId)

            <div class="form-group">
                @Html.LabelFor(m => m.Заглавие, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Заглавие, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Съдържание, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Съдържание, new { @class = "form-control", @rows = "7" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Цена, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Цена, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Категория, new { @class = "control-label col-sm-4" })
                <div class="dropdown col-sm-4">
                    @Html.DropDownListFor(m => m.Категория,
                        new SelectList(Model.Categories, "Id", "Name", Model.Категория),
                        new { @class = "btn btn-info col-sm-12" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Град, new { @class = "control-label col-sm-4" })
                <div class="dropdown col-sm-4">
                    @Html.DropDownListFor(m => m.Град,
                        new SelectList(Model.Towns, "Id", "Name", Model.Град),
                        new { @class = "btn btn-info col-sm-12" })
                </div>
            </div>

            if(User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Approved">Одобрение</label>
                    <div class="dropdown col-sm-4">
                        <select class="btn btn-info col-sm-12" data-val="true" data-val-number="The field Approved must be a number." data-val-required="The TownId field is required." id="Approved" name="Approved">
                            <option @if (Model.Approved == -1) {@: selected="selected" 
                                     } value="-1">Неодобрена</option>

                            <option @if (Model.Approved == 0) {@: selected="selected"
                                    } value="0">Чакаща</option>
                                 
                           <option @if (Model.Approved == 1) {@: selected="selected"
                                    }  value="1">Одобрена</option>

                   </select>
               </div>
             </div>
            }





            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Назад", "Index", "Ad", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Редактирай" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>