@model Marketplace.Models.Ad

@{
    ViewBag.Title = "Изтриване на обява";
}

<div class="container">
    <div class="well">
        <h2>Изтрий обява</h2>
        @using (Html.BeginForm("Delete", "Ad", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @readonly = "readonly", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Назад", "Index", "Ad", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Изтрий" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>