@model Marketplace.Models.AddProfilePicture
@{
    ViewBag.Title = "Добавяна на профилна снимка";
    string filePathProfilePicture;
    if (ViewBag.userPicture != null)
    {
        filePathProfilePicture = VirtualPathUtility.ToAbsolute("~/Content/ProfilePictures/") + ViewBag.userPicture;

    }
    else
    {
        filePathProfilePicture = VirtualPathUtility.ToAbsolute("~/Content/ProfilePictures/avatar.jpg");
    }
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddProfilePicture", "Manage", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label">Текуща снимка</label>
        <div class="col-md-10">
            
                <img src="@filePathProfilePicture" width="200">
            
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProfilePicture, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">

            <input type="file" name="ProfilePicture" id="ProfilePicture" accept=".png,.jpg,.jpeg,.gif,.tif" />

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Качи" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


