@model List<Marketplace.Models.Town>
@{
    ViewBag.Title = "Администрация";
}
<div class="container">
    <div class="well">
        <h2> Градове - @Html.ActionLink("Добави", "Create", "Town", null, new { @class = "btn btn-warning" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Град</th>
                        <th>Настройки</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var town in Model)
                    {
                        <tr>
                            <td>@town.Id</td>
                            <td>@town.Name</td>
                            <td>
                                @Html.ActionLink("Редактирай", "Edit", "Town", new { @id = town.Id }, null)
                                @Html.ActionLink("Изтрий", "Delete", "Town", new { @id = town.Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
