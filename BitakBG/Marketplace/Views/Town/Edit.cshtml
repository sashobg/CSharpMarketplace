@model Marketplace.Models.Town
@{
    ViewBag.Title = "Редактиране на град";
}
<div class="container">
    <div class="well">
        <h2>Редактирай град</h2>
        @using (Html.BeginForm("Edit", "Town", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Назад", "List", "Town", new { @class = "btn btn-default" })
                    <input type="submit" value="Редактирай" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>
